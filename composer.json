{
  "name": "chillcode/orderfeatures",
  "description": "PrestaShop module orderfeatures",
  "homepage": "https://github.com/chillcode/orderfeatures",
  "license": "AFL-3.0",
  "authors": [
    {
      "name": "Chillcode",
      "email": "chillcode@protonmail.ch"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "prestashop/php-dev-tools": "^5.0",
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpunit/phpunit": "^10.5"
  },
  "config": {
    "preferred-install": "dist",
    "prepend-autoloader": false
  },
  "autoload": {
    "psr-4": {
      "PrestaShop\\Module\\OrderFeatures\\": "src/"
    },
    "classmap": [
      "orderfeatures.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/Unit",
      "PrestaShop\\PrestaShop\\": "tests/Unit/Stubs/PrestaShop/PrestaShop/"
    }
  },
  "type": "prestashop-module",
  "scripts": {
    "phpstan": [
      "_PS_ROOT_DIR_=../../ vendor/bin/phpstan analyse --configuration=tests/phpstan/phpstan.neon"
    ],
    "lint": [
      "php-cs-fixer fix --no-interaction --dry-run --diff"
    ],
    "fix": [
      "php-cs-fixer fix --diff"
    ]
  }
}